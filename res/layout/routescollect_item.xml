<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:gravity="center_vertical"
			  android:orientation="horizontal" >

<ImageView
		android:id="@+id/image"

		android:layout_width="60dp"
		android:layout_height="80dp"
		android:src="@drawable/xiamen_three"
		android:layout_marginLeft="7dp" />

<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="title"
		android:textSize="28dp"
		android:layout_marginLeft="10dp" android:minWidth="210dp"/>
	<RatingBar style="?android:attr/ratingBarStyleSmall" android:id="@+id/ratingBar"
			   android:layout_width="wrap_content" android:layout_height="wrap_content"
			   android:layout_alignLeft="@+id/sight_type" android:layout_below="@+id/sight_name"
			   android:isIndicator="true" android:numStars="5" android:rating="4.4"
			   android:layout_gravity="center_vertical"/>

</LinearLayout>
